  author         User?     @relation("Saint_author", fields: [authorId], references: [id])
  authorId       String?   @map("author")
  status         String?   @default("draft")

  @@index([authorId])
}

model User {
  id     String  @id @default(cuid())
  name   String  @default("")
  email  String  @unique @default("")
