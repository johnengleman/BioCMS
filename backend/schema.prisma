  saints Saint[] @relation("Book_saints")
}

model Church {
  id          String  @id @default(cuid())
  name        String  @default("")
  location    String  @default("")
  bio         String  @default("")
  patronSaint Saint[] @relation("Church_patronSaint")
  relics      Saint[] @relation("Church_relics")
}

model Saint {
  id             String    @id @default(cuid())
  name           String    @default("")
